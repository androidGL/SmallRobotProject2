
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="血糖监测"
            android:textColor="@color/title_text"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="@dimen/title_right_png"
            android:layout_height="@dimen/title_right_png"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/history" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="@dimen/title_height_top"
            android:onClick="back"
            android:padding="10dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/glu_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/battery"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/feature_horizontal_margin"
            android:layout_marginTop="@dimen/feature_device_name_margin_top"
            android:background="@drawable/battery"
            android:gravity="center"
            android:text="@string/not_available"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/feature_device_name_margin_top"
            android:layout_toRightOf="@id/battery"
            android:ellipsize="end"
            android:freezesText="true"
            android:maxLines="1"
            android:text="@string/gls_default_name"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <include layout="@layout/view_current_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Application section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/feature_horizontal_margin"
            android:layout_marginRight="@dimen/feature_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/Widget.ListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.ListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_text_size"
                    android:padding="8dp"
                    android:text="@string/gls_section_data" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:onClick="refreshData"
                    android:src="@mipmap/refresh" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/delete"
                    android:onClick="deleteAll"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarStyle="outsideOverlay"
                tools:listitem="@layout/activity_feature_gls_item" />

            <TextView
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/gls_no_data" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/action_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin_bottom"
        android:onClick="onConnectClicked"
        android:text="@string/action_connect" />
</LinearLayout>