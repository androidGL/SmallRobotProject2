<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bpm_type"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/circle_normal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/bpm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="121321443543"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bpm_systolic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:text="@string/bpm_systolic"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_type"
        app:layout_constraintTop_toBottomOf="@id/bpm_time" />

    <TextView
        android:id="@+id/bpm_systolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/bpm_systolic"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_systolic_title"
        app:layout_constraintTop_toBottomOf="@id/bpm_time" />

    <TextView
        android:id="@+id/bpm_diastolic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/bpm_diastolic"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_systolic"
        app:layout_constraintTop_toBottomOf="@id/bpm_time" />

    <TextView
        android:id="@+id/bpm_diastolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/bpm_diastolic"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_diastolic_title"
        app:layout_constraintTop_toBottomOf="@id/bpm_time" />

    <TextView
        android:id="@+id/bpm_mean_ap_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:text="@string/bpm_mean_ap"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_type"
        app:layout_constraintTop_toBottomOf="@id/bpm_systolic" />

    <TextView
        android:id="@+id/bpm_mean_ap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/bpm_mean_ap"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_mean_ap_title"
        app:layout_constraintTop_toBottomOf="@id/bpm_systolic" />

    <TextView
        android:id="@+id/bpm_pulse_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/bpm_pulse"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_mean_ap"
        app:layout_constraintTop_toBottomOf="@id/bpm_systolic" />

    <TextView
        android:id="@+id/bpm_pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/bpm_pulse"
        android:textSize="@dimen/small_size"
        app:layout_constraintLeft_toRightOf="@id/bpm_pulse_title"
        app:layout_constraintTop_toBottomOf="@id/bpm_systolic" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toBottomOf="@id/bpm_pulse"
        />

</androidx.constraintlayout.widget.ConstraintLayout>