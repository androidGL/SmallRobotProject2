<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="36sp"
        android:text="福娃"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/guo"
        android:layout_width="match_parent"
        android:text="国医堂中医问诊"
        android:gravity="center"
        android:textSize="26sp"
        android:background="#e6e6e6"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:tag="guo"
        android:onClick="toNextPage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/ncp_screen"
        android:layout_width="match_parent"
        android:text="新型冠状病毒肺炎筛查"
        android:gravity="center"
        android:textSize="26sp"
        android:background="#e6e6e6"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:tag="ncp_screen"
        android:onClick="toNextPage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guo"/>
    <TextView
        android:id="@+id/medicine"
        android:layout_width="match_parent"
        android:text="西医智能问药"
        android:gravity="center"
        android:textSize="26sp"
        android:background="#e6e6e6"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:tag="medicine"
        android:onClick="toNextPage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ncp_screen"/>
    <TextView
        android:id="@+id/diagnose"
        android:layout_width="match_parent"
        android:text="西医智能自诊"
        android:gravity="center"
        android:textSize="26sp"
        android:background="#e6e6e6"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:tag="diagnose"
        android:onClick="toNextPage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medicine"/>

    <TextView
        android:id="@+id/openwake"
        android:layout_width="wrap_content"
        android:text="开启语音唤醒"
        android:gravity="center"
        android:textSize="26sp"
        android:background="#e6e6e6"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:tag="diagnose"
        android:layout_marginLeft="20dp"
        android:onClick="openWake"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diagnose"/>

    <TextView
        android:id="@+id/closewake"
        android:layout_width="wrap_content"
        android:text="关闭语音唤醒"
        android:gravity="center"
        android:textSize="26sp"
        android:background="#e6e6e6"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:tag="diagnose"
        android:onClick="closeWake"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diagnose"/>

</androidx.constraintlayout.widget.ConstraintLayout>